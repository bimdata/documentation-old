// page CONCEPTS & GUIDE
#concepts, #guide, #cookbook, #tutorials{
  h1{
    @include font-size(27px);
    text-align: center;
    text-transform: uppercase;
  }
  .topic{
    margin: 37px auto;
    padding: 0 30px;
    width: 960px;
    height: 106px;
    background-color: $color-white;
    box-shadow: 0 2px 7px 0 rgba($color-black, .1);
    @include flexbox;
    @include align-items(center);
    p{
      margin: 0;
      a{
        &::after{
          content: none;
        }
      }
      &.topic-title{
        width: 300px;
        height: 100%;
        position: relative;
        @include flexbox;
        @include align-items(center);
        @include font-size(20px);
        line-height: 24px;
        &::after{
          content: "";
          position: absolute;
          width: 2px;
          height: 100%;
          top: 0;
          right: 0;
          background-color: $color-background;
        }
      }
    }
    blockquote{
      padding-left: 32px;
      width: 555px;
      border: none;
      line-height: 22px;
      @include font-size(16px);
    }
  }
}


// page RESULTATS RECHERCHE
#search-results{
  .context{
    .highlighted{
      padding: .1rem .2rem;
      background-color: $color-secondary;
      color: $color-primary;
      border-radius: 3px;
      font-weight: bold;
      letter-spacing: .02rem;
    }
  }
}

// page PARAMETERS & METHODS
#parameters-and-methods{
  #attributes{
    ul{
      li{
        padding: 0;
        &::before{
          content: none;
        }
      }
    }
  }
  h3{
    margin-bottom: 13px;
  }
}
table.field-list{
  margin-top: .5rem;
  width: inherit;
  tbody{
    tr{
      td{
        padding: 0 1rem;
        background-color: $color-white;
      }
    }
  }
}
